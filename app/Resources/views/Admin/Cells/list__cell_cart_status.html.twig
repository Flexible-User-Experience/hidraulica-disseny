{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    {% spaceless %}
        <div>
            {% if object.status == 0 %}
                <span class="label label-danger" style="margin-right:10px">{{ 'backend.admin.cart.status.new' | trans }}</span>
            {% elseif object.status == 1 %}
                <span class="label label-warning" style="margin-right:10px">{{ 'backend.admin.cart.status.pending' | trans }}</span>
            {% elseif object.status == 2 %}
                <span class="label label-info" style="margin-right:10px">{{ 'backend.admin.cart.status.sent' | trans }}</span>
            {% elseif object.status == 3 %}
                <span class="label label-success" style="margin-right:10px">{{ 'backend.admin.cart.status.invoiced' | trans }}</span>
            {% else %}
                ---
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}

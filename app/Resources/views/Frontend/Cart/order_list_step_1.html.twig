{% extends ':Frontend:layout_secure.html.twig' %}

{% block title %}{{ 'front.cart.step1.title' | trans | title }} · {{ parent() }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row extra-m-top">
            <div class="col-xs-3">
                <a href="{{ path('app_product_list') }}"><i class="fa fa-chevron-circle-left"></i> {{ 'front.cart.back' | trans | upper }}</a>
            </div>
            <div class="col-xs-6 text-center">
                <h2 class="no-m-top no-m-bottom">{{ 'front.cart.cart' | trans | upper }}</h2>
            </div>
            <div class="col-xs-3 text-right">
                <a href="{{ path('app_cart_checkout_step_2') }}" class="btn btn-success">{{ 'front.cart.continue' | trans | upper }}</a>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th colspan="2"></th>
                        <th class="text-right">{{ 'front.cart.table.unitprice' | trans | title }}</th>
                        <th class="text-right">{{ 'front.cart.table.units' | trans | title }}</th>
                        <th class="text-right">{{ 'front.cart.table.price' | trans | title }}</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in cart.items %}
                        <tr>
                            <td><img class="img-responsive" src="{{ vich_uploader_asset(item.product, 'imageFile') | imagine_filter('60x60') }}" alt="{{ item.product.title }} photo"></td>
                            <td>{{ item.product.title }}</td>
                            <td class="text-right">{{ item.baseAmount }} €</td>
                            <td class="text-right">{{ item.quantity }}</td>
                            <td class="text-right">{{ item.totalAmount }} €</td>
                            <td class="text-right"><a href="{{ path('app_cart_remove_item', {itemId: item.product.id}) }}"><i class="fa fa-times-circle"></i></a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th colspan="2"></th>
                        <th colspan="2" class="text-right">{{ 'front.cart.table.price' | trans | title }}</th>
                        <th class="text-right">{{ cart.baseAmount }} €</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th colspan="2"></th>
                        <th colspan="2" class="text-right">{{ 'front.cart.table.tax' | trans | title }} {{ cart.vatTax }}%</th>
                        <th class="text-right">{{ cart.vatTaxAmount }} €</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th colspan="2"></th>
                        <th colspan="2" class="text-right">{{ 'front.cart.table.price' | trans | title }}</th>
                        <th class="text-right">{{ cart.totalAmountWithDeliveryAndVatTax }} €</th>
                        <th></th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 text-right">
                <a href="{{ path('app_cart_checkout_step_2') }}" class="btn btn-success">{{ 'front.cart.continue' | trans | upper }}</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block js_page_level %}
    {#<!-- JS Page Level -->#}
    <script type="text/javascript" src="{{ asset('assets/js/shop.app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/js/forms/page_login.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
    <script type="text/javascript">
        function addItem(id) {
            var btn = jQuery('#add_button_' + id);
            var qty = jQuery('#qty_' + id);
            var value = parseInt(qty.val()) + 1;
            btn.html('<i class="fa fa-spin fa-refresh"></i>');
            jQuery.getJSON(Routing.generate('api_cart_update_item_quantity', {itemId: id, quantity: value}, true), function (data) {
                if (typeof data.result !== 'undefined' && data.result === 'OK') {
                    qty.val(value);
                    btn.html('<i class="fa fa-plus"></i>');
                    jQuery('#shop_red_' + id).text(data.line + ' €');
                    jQuery('#base_amount').text(data.base + ' €');
                    jQuery('#tax_amount').text(data.tax + ' €');
                    jQuery('#total_amount').text(data.total + ' €');
                }
            });
        }
        function removeItem(id) {
            var btn = jQuery('#subtract_button_' + id);
            var qty = jQuery('#qty_' + id);
            var value = parseInt(qty.val()) - 1;
            if (value < 0) {
                value = 0;
            }
            btn.html('<i class="fa fa-spin fa-refresh"></i>');
            jQuery.getJSON(Routing.generate('api_cart_update_item_quantity', {itemId: id, quantity: value}, true), function (data) {
                if (typeof data.result !== 'undefined' && data.result === 'OK') {
                    qty.val(value);
                    btn.html('<i class="fa fa-minus"></i>');
                    jQuery('#shop_red_' + id).text(data.line + ' €');
                    jQuery('#subtotal_amount').text(data.total + ' €');
                    jQuery('#total_amount').text(data.total + ' €');
                }
            });
        }
    </script>
{% endblock %}

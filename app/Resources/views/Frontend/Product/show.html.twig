{% extends ':Frontend:layout_secure.html.twig' %}

{% block title %}{{ product.title | title }} · {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .carousel { margin-bottom: 20px; }
        .carousel .item { background-color: #FFF; }
        .item .thumb {
            margin-bottom: 10px;
            cursor: pointer;
        }
        .btn-lg, .input-lg { border-radius: 0; }
        .jssora02l, .jssora02r {
            display: block;
            position: absolute;
            /* size of arrow element */
            width: 55px;
            height: 55px;
            cursor: pointer;
            background: url('{{ asset('bundles/app/images/a02.png') }}') no-repeat;
            overflow: hidden;
        }
        .jssora02l { background-position: -3px -33px; }
        .jssora02r { background-position: -63px -33px; }
        .jssora02l:hover { background-position: -123px -33px; }
        .jssora02r:hover { background-position: -183px -33px; }
        .jssora02l.jssora02ldn { background-position: -3px -33px; }
        .jssora02r.jssora02rdn { background-position: -63px -33px; }
        .jssort03 .p {
            position: absolute;
            top: 0;
            left: 0;
            width: 62px;
            height: 32px;
        }
        .jssort03 .t {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }
        .jssort03 .w, .jssort03 .pav:hover .w {
            position: absolute;
            width: 60px;
            height: 30px;
            border: white 1px solid;
            box-sizing: content-box;
        }
        .jssort03 .pdn .w, .jssort03 .pav .w {
            border-style: solid;
        }
        .jssort03 .c {
            position: absolute;
            top: 0;
            left: 0;
            width: 62px;
            height: 32px;
            background-color: #000;
            filter: alpha(opacity=45);
            opacity: .45;
            transition: opacity .6s;
            -moz-transition: opacity .6s;
            -webkit-transition: opacity .6s;
            -o-transition: opacity .6s;
        }
        .jssort03 .p:hover .c, .jssort03 .pav .c {
            filter: alpha(opacity=0);
            opacity: 0;
        }
        .jssort03 .p:hover .c {
            transition: none;
            -moz-transition: none;
            -webkit-transition: none;
            -o-transition: none;
        }
        * html .jssort03 .w {
            width /**/: 62px;
            height /**/: 32px;
        }
    </style>
{% endblock %}

{% block main %}
    <div class="container">
        {% if not product.enabled %}
            <div class="alert alert-danger" role="alert"><i class="fa fa-exclamation-triangle"></i> Borrador. Aquest producte no està disponible a la web pública</div>
        {% endif %}
        <div class="row extra-m-bottom">
            <div class="col-sm-8 col-xs-12">
                <div id="jssor_1" style="position:relative;margin:0 auto;top:0;left:0;height:480px;overflow:hidden;visibility: hidden;">
                    <div data-u="slides" style="cursor:default;position:relative;top:0;left:0;width:700px;height:530px;overflow: hidden;">
                        {% for image in product.images %}
                            <div data-p="112.50" style="display: none;">
                                <img data-u="image" src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('700x530') }}" />
                                <img data-u="thumb" src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('138x75') }}" />
                            </div>
                        {% endfor %}
                        <a data-u="ad" href="http://www.jssor.com" style="display:none">jQuery Slider</a>
                    </div>
                    {#<!-- Thumbnail Navigator -->#}
                    <div u="thumbnavigator" class="jssort03" style="position:absolute;left:0;bottom:0;width:600px;height:75px;" data-autocenter="1">
                        <div style="position:absolute;top:0;left:0;width:100%;height:100%;background-color: #000; filter:alpha(opacity=30.0); opacity:0.3;"></div>
                        {#<!-- Thumbnail Item Skin Begin -->#}
                        <div u="slides" style="cursor:default;">
                            <div u="prototype" class="p">
                                <div class="w">
                                    <div u="thumbnailtemplate" class="t"></div>
                                </div>
                                <div class="c"></div>
                            </div>
                        </div>
                        {#<!-- Thumbnail Item Skin End -->#}
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-xs-12">
                <h1 class="no-m-top">{{ product.title }}</h1>
                <h2 class="no-m-top"><small>{{ product.price }} <i class="fa fa-eur"></i></small></h2>
                <form class="form-inline" action="{{ path('app_cart_include_new_item') }}" method="post">
                    <div class="form-group">
                        <label for="quantity" style="margin: 0 5px 0 0">
                            <select class="form-control input-lg" name="quantity">
                                <option{% if quantity == 1 %} selected="selected"{% endif %}>1</option>
                                <option{% if quantity == 2 %} selected="selected"{% endif %}>2</option>
                                <option{% if quantity == 3 %} selected="selected"{% endif %}>3</option>
                                <option{% if quantity == 4 %} selected="selected"{% endif %}>4</option>
                                <option{% if quantity == 5 %} selected="selected"{% endif %}>5</option>
                            </select>
                        </label>
                    </div>
                    <input type="hidden" name="product" value="{{ product.id }}">
                    <button type="submit" class="btn btn-lg btn-success">{{ 'front.cart.add' | trans }}</button>
                </form>
                <div class="normal-font-size extra-m-top">{{ product.description | raw }}</div>
            </div>
        </div>
        {% if product.urlVimeo %}
            <div class="row">
                <div class="col-xs-12">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/{{ product.vimeoId }}" frameborder="0"></iframe>
                    </div>
                </div>
            </div>
            <hr>
        {% endif %}
        <div class="row">
            <div class="col-sm-1 col-xs-2">
                <a class="c-grey" style="text-decoration:none" href="{{ path('app_product_detail_prev', {slug: product.slug}) }}"><i class="fa-2x icon-chevron-thin-left"></i></a>
            </div>
            <div class="col-sm-10 col-xs-8 text-center">
                <a class="c-grey" href="{{ path('app_product_list') }}">{{ 'front.jumper.product' | trans | upper }}</a>
            </div>
            <div class="col-sm-1 col-xs-2 text-right">
                <a class="c-grey" style="text-decoration:none" href="{{ path('app_product_detail_next', {slug: product.slug}) }}"><i class="fa-2x icon-chevron-thin-right"></i></a>
            </div>
        </div>
    </div>
{% endblock %}

{% block languages %}
    {% include ':Frontend/includes:language-selector.html.twig' with {route: 'app_product_detail', params: {slug: product.slug}} %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/jssor.slider.min.js') }}"></script>
    <script type="text/javascript">
        jssor_1_slider_init = function() {
            var jssor_1_options = {
                $AutoPlay: false,
                $ArrowNavigatorOptions: {
                    $Class: $JssorArrowNavigator$
                },
                $ThumbnailNavigatorOptions: {
                    $Class: $JssorThumbnailNavigator$,
                    $Cols: 9,
                    $SpacingX: 3,
                    $SpacingY: 3,
                    $Align: 260
                }
            };
            var jssor_1_slider = new $JssorSlider$('jssor_1', jssor_1_options);
            function ScaleSlider() {
                var refSize = jssor_1_slider.$Elmt.parentNode.clientWidth;
                if (refSize) {
                    refSize = Math.min(refSize, 780);
                    jssor_1_slider.$ScaleWidth(refSize);
                }
                else {
                    window.setTimeout(ScaleSlider, 30);
                }
            }
            ScaleSlider();
            $Jssor$.$AddEvent(window, 'load', ScaleSlider);
            $Jssor$.$AddEvent(window, 'resize', ScaleSlider);
            $Jssor$.$AddEvent(window, 'orientationchange', ScaleSlider);
        };
        jQuery(document).ready(function($) {
            jssor_1_slider_init();
        });
    </script>
{% endblock %}
